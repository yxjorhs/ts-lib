{
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "arrow-parens": [true, "ban-single-arg-parens"],
      "indent": [true, "spaces", 2],
      "max-classes-per-file": false,
      "object-literal-sort-keys": false,
      "semicolon": false,
      "trailing-comma": false,
      "variable-name": ["allow-snake-case"]
    },
    "rulesDirectory": []
}